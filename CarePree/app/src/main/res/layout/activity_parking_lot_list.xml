<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:weightSum="10"
    tools:context=".ParkingLotList">


    <LinearLayout
        android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:onClick="enterFilteringFromParkingLotList"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/img"
                app:srcCompat="@drawable/img" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="70dp"
                android:text="인근주차장"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/parkingList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/borderline"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="10dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="enterFavorites"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/favorites_btn"
                android:layout_width="54dp"
                android:layout_height="35dp"
                android:layout_weight="0"
                android:onClick="enterFavorites"
                app:srcCompat="@drawable/ic_favorites"
                tools:tint="#808080" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="enterMain"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_btn"
                android:layout_width="54dp"
                android:layout_height="35dp"
                android:onClick="enterMain"
                app:srcCompat="@drawable/ic_main"
                tools:tint="#808080" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="enterSettings"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/settings_btn"
                android:layout_width="54dp"
                android:layout_height="35dp"
                android:onClick="enterSettings"
                app:srcCompat="@drawable/ic_settings"
                tools:tint="#808080" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>